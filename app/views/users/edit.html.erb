<div>
  <%= flash[:notice] %>
</div>

<% if @user.errors.any? %>
   <% if @user.errors.count == 1 %>
    <%= @user.errors.count %> error prohibited this obj from being saved:
  <% end %>
  <ul>
    <% @user.errors.full_messages.each do |message| %>
      <li><%= message %></li>
    <% end %>
  </ul>
<% end %>

<div class=" col-md-8 mx-auto">
  <h1>User info</h1>

  <%= image_tag @user.get_profile_image(100,100) %>
  <%= form_with model: @user, url: user_path(@user.id), method: :patch do |f| %>
    <p>Name</p>
    <%= f.text_field :name %>
    <p>Profile Image</p>
    <%= f.file_field :profile_image, accept: "image/*" %>
    <p>Introduction</p>
    <%= f.text_area :introduction %>

    <p><%= f.submit 'Update User', class: "btn btn-secondary"  %></p>
  <% end %>
</div>