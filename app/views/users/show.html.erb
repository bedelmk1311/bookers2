<div>
  <%= flash[:notice] %>
</div>
<div class="container"> 
  <div class="row" style="background-color: #b6e7ff ;">
     <div class="col-md-3" style="background-color: orange;">
        <%= render 'books/list', user: @user_find %>
        <%= render 'books/new', book_new: @book %>
     </div>

     <div class="col-md-8 offset-md-1" style="background-color: #ff00ff ;">
      <h1>Books#users/show</h1>
        <table class="table table-striped">
          <tr>
            <td>Image</td>
            <td>Title</td>
            <td>Opinion</td>
          </tr>
          <% @books.each do |book| %>
            <tr>
               <td>
               <%= link_to user_path(@user) do %>
                 <%= image_tag @user_find.get_profile_image(100,100) %>
                 <p><%= @user_find.name %></p>
               <% end %>
               </td>

               <td>
                 <%= link_to book_path(book) do %>
                   <%= book.title %></td>
                 <% end %>
               <td><%= book.body %></td>
            </tr>

          <% end %>
         </table>
  </div>
</div>



