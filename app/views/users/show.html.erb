<div>
  <%= flash[:notice] %>
</div>
<div class="container"> 
  <div class="row" style="background-color: #b6e7ff ;">
     <div class="col-md-3" style="background-color: orange;">
        <%= render 'books/list', books: @books %>
        <%= render 'books/new', books: @books %>
     </div>

     <div class="col-md-8 offset-md-1" style="background-color: #ff00ff ;">
      <h1>Books#users/show</h1>


        <table class="table table-striped">
          <tr>
            <td>Image</td>
            <td>Title</td>
            <td>Opinion</td>
          </tr>
          <% @books.each do |book| %>
            <tr>
               <td><%= image_tag @user.get_profile_image(100,100) %>
               <p><%= @user.name %></p>
               </td>
               <td><%= book.title %></td>
               <td><%= book.body %></td>
            </tr>

          <% end %>
         </table>



  </div>
</div>



