<div>
  <%= flash[:notice] %>
</div>
<div class="container"> 
  <div class="row" >
     <div class="col-md-3" >
        <%= render 'books/list', books: @books, user: current_user %>
        <%= render 'books/new', book_new: @book %>
     </div>

     <div class="col-md-8 offset-md-1">
      <h1>Users</h1>
      <div>
        <table class="table table-striped">
        <% @users.each do |user| %>
         <tr>
         <th> 
           <%= link_to user_path(user.id) do %>
             <%= image_tag user.get_profile_image(100,100) %>
           <% end %>
           <p>name: <%= user.name %></p>
         </th>

         <th>
           <td><%= user.name %></td>
           <td><%= user.introduction %></td>
         </th>
         <th>
          <%= link_to "Show" , user_path(user.id), class: "btn btn-secondary"  %>
         </th>
         </tr>
       <% end %>
       </table>
      </div>

  </div>
</div>



