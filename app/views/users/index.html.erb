<div>
  <%= flash[:notice] %>
</div>
<div class="container"> 
  <div class="row" style="background-color: #b6e7ff ;">
     <div class="col-md-3" style="background-color: orange;">
       <div>
         <%= render 'list', books: @user %>
       </div>

       <h1>New book</h1>
       <% if @book.errors.any? %>
         <% if @book.errors.count == 1 %>
           <%= @book.errors.count %> error prohibited this obj from being saved:
         <% else %>
           <%= @book.errors.count %> errors prohibited this obj from being saved:
         <% end %>
         <ul>
           <% @book.errors.full_messages.each do |message| %>
         <li><%= message %></li>
          <% end %>
         </ul>
       <% end %>
       <%= form_with model: @book do |f| %>
        <h4>Title</h4>
        <%= f.text_field :title %>
        <h4>Opinion</h4>
        <%= f.text_area :body %>
        <p><%= f.submit 'Create Book', class: "btn btn-secondary" %></p>
       <% end %>
      </div>

     <div class="col-md-8 offset-md-1" style="background-color: #ff00ff ;">
      <h1>Users#index</h1>
      <div>
        <% @users.each do |user| %>
        <table class="table table-striped">
         <th> 
           <%= link_to user_path(user.id) do %>
             <%= image_tag user.get_profile_image(100,100) %>
           <% end %>
         </th>

         <th>
           <td><%= user.name %></td>
           <td><%= user.introduction %></td>
         </th>
         <th>
          <%= link_to "Show" , user_path(user.id), class: "btn btn-secondary"  %>
         </th>
       </table>
       <% end %>
      </div>

  </div>
</div>



