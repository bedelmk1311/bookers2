<!-- ユーザーの投稿一覧 -->
<% @books.each do |book| %>
  <div>
     <%= link_to book_path(book.id) do %>
        <%= image_tag book.get_image %>
      <% end %> 
        <p>Title：<%= book.title %></p>
        <p>Opinion：<%= book.body %></p>
        <p>ユーザーネーム：<%= book.user.name %></p>
        <td><%= link_to "Show" , book_path(book.id) %></td>
        <td><%= link_to "Edit" , edit_book_path(book.id) %></td>
  </div>
 <% end %>