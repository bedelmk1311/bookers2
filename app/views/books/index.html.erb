<div>
  <%= flash[:notice] %>
</div>
<div class="container"> 
  <div class="row" style="background-color: #b6e7ff ;">
    <div class="col-md-3" style="background-color: orange;">
      <h1>User info#index</h1>
      <%= image_tag @user.get_profile_image(100,100) %>

      <table class="table table-striped">
         <tr>
           <td>name</td>
           <td><%= @user.name %></td>
         </tr>
         <tr>
           <td>introduction</td>
           <td><%= @user.introduction %></td>
         </tr>
       </table>
      <p><%= link_to "Edit" , edit_user_path(@user.id), class: "btn btn-secondary"  %></p>




      <h1>New book#index</h1>
      <% if @book.errors.any? %>
         <% if @book.errors.count == 1 %>
           <%= @book.errors.count %> error prohibited this obj from being saved:
         <% else %>
           <%= @book.errors.count %> errors prohibited this obj from being saved:
         <% end %>
         <ul>
           <% @book.errors.full_messages.each do |message| %>
         <li><%= message %></li>
          <% end %>
         </ul>
      <% end %>

      <%= form_with model: @book do |f| %>
        <h4>Title</h4>
        <%= f.text_field :title %>
        <h4>Opinion</h4>
        <%= f.text_area :body %>
        <p><%= f.submit 'Create Book', class: "btn btn-secondary" %></p>
      <% end %>
      
    </div>
    <div class="col-md-8 offset-md-1" style="background-color: #ff00ff ;">
      <h1>Books#index</h1>
      <div>
        <% @books.each do |book| %>
        <table class="table table-striped">
         <th> 
           <%= link_to book_path(book.id) do %>
             <%= image_tag @user.get_profile_image(100,100) %>
           <% end %>
           <p>name: <%= book.user.name %></p>
         </th>

         <th>
           <td><%= book.title %></td>
           <td><%= book.body %></td>
         </th>
         <th>
           <%= link_to "Edit" , edit_book_path(book.id), class: "btn btn-secondary"  %>
         </th>
         <th>
           <% if book.user.id == current_user.id %>
             <%= link_to "Destroy", book_path(book), method: :delete , class: "btn btn-secondary"  %>
           <% end %>
         </th>
       </table>
       <% end %>
      </div>

    </div>
  </div>
</div>
