<div>
  <%= flash[:notice] %>
</div>

<h1>Books</h1>

<div class="container"> 
  <div class="row" style="background-color: #b6e7ff ;">
    <div class="col-md-3" style="background-color: orange;">
      
      <h1>仮User info</h1>
      <div>
         user/showを入れたい
      </div>
      <%= render 'books/list', books: @books %>

      <h1>仮New book サイドバー</h1>

      <% if @book.errors.any? %>
         <% if @book.errors.count == 1 %>
           <%= @book.errors.count %> error prohibited this obj from being saved:
         <% else %>
           <%= @book.errors.count %> errors prohibited this obj from being saved:
         <% end %>
         <ul>
           <% @book.errors.full_messages.each do |message| %>
         <li><%= message %></li>
          <% end %>
         </ul>
      <% end %>

      <%= form_with model: @book do |f| %>
        <h4>Title</h4>
        <%= f.text_field :title %>
        <h4>Opinion</h4>
        <%= f.text_area :body %>
        <p><%= f.submit 'Create Book' %></p>
      <% end %>
      
    </div>
    
    <div class="col-md-8 offset-md-1" style="background-color: #ff00ff ;">
      <table class="table table-striped">
        <thead>
         <tr>
           <th>Title</th>
           <th>Opinion</th>
         </tr>
        </thead>
        <tbody>
          <tr>
            <%= render 'list', books: @books %> 
            <br>
            <%= link_to '仮ボタン', new_book_path, class: "btn btn-secondary" %>
          </tr>
        </tbody>
      </table>
    </div>
    
  </div>
</div>
