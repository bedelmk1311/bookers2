<div>
  <%= flash[:notice] %>
</div>
<div class="container"> 
  <div class="row" style="background-color: #b6e7ff ;">
     <div class="col-md-3" style="background-color: orange;">
        <%= render 'list', books: @books, user: @user %>
        <%= render 'new', book_new: @book_new %>
     </div>

     <div class="col-md-8 offset-md-1" style="background-color: #ff00ff ;">
      <h1>Book detail</h1>
        <table class="table table-striped">
         <th> 
           <td>
           <%= link_to user_path(@user) do %>
             <%= image_tag @user.get_profile_image(100,100) %>
           <% end %>

           <%= link_to user_path(@user) do %>
             <p><%= @user.name %></p>
           <% end %>
           </td>
         </th>

         <th>
           <td>
              <%= link_to book_path(@book) do %>
                 <%= @book.title %>
              <% end %>
            </td>
           <td><%= @book.body %></td>
         </th>
         <th>
          <% if @user == current_user %>
            <%= link_to "Edit" , edit_book_path(@book.id), class: "btn btn-secondary"  %>
          <% end %>
         </th>
         <th>
          <% if @user == current_user %>
             <%= link_to "Destroy", book_path(@book.id), method: :delete, class: "btn btn-secondary" %>
          <% end %>
          </th>

       </table>


  </div>
</div>



